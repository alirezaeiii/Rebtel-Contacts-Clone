<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextColor">@color/color3</item>
        <item name="android:windowBackground">@color/color_background</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="bottomSheetDialogTheme">@style/RoundedBottomSheetDialogTheme</item>
    </style>

    <style name="DefaultTheme" parent="AppTheme">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <style name="LineStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <style name="PadLayoutStyle">
        <item name="android:paddingTop">16dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingStart">16dip</item>
        <item name="android:paddingEnd">16dip</item>
    </style>

    <style name="PadButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:layout_marginStart">8dip</item>
        <item name="android:layout_marginEnd">8dip</item>
    </style>

    <style name="PadButtonStyle.DialPadKey">
        <item name="android:background">@drawable/unbounded_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DialpadKeyNumberStyle">
        <item name="android:textColor">@color/dialpad_primary_text_color</item>
        <item name="android:textSize">@dimen/dialpad_key_numbers_size</item>
        <item name="android:fontFamily">@font/exo2_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dialpad_key_number_margin_bottom</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialpadKeyLettersStyle">
        <item name="android:textColor">@color/dialpad_secondary_text_color</item>
        <item name="android:textSize">@dimen/dialpad_key_letters_size</item>
        <item name="android:fontFamily">@font/exo2_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="SearchViewTheme" parent="@android:style/ThemeOverlay.Material.ActionBar">
        <item name="colorControlActivated">?android:colorAccent</item>
        <item name="android:searchViewStyle">@style/Widget.SearchView</item>
    </style>

    <style name="Widget.SearchView" parent="android:style/Widget.Material.SearchView">
        <item name="android:searchIcon">@android:color/transparent</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="RoundedBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheetStyle</item>
    </style>

    <style name="RoundedBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_corners_dialog</item>
    </style>

</resources>
